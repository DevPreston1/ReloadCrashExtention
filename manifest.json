{
    "name": "Reload Crashed WebPage",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Automatically reload tabs that crashed.",
    "homepage_url": "http://github.com/unclespode/ohnoyoudidnt",
    "icons": {
        "16": "icons/icon16.png",
        "19" : "icons/icon19.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "src/bg/background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "file://*/"
    ]
}
